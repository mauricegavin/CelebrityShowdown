<?xml version="1.0" encoding="utf-8"?>
<manifest package="mauricegavin.celebrityshowdown"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".ShowdownActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ComparisonActivity"
            android:label="@string/title_activity_comparison_activity"
            android:screenOrientation="portrait"
            android:parentActivityName=".ShowdownActivity">
        </activity>

    </application>

</manifest>
